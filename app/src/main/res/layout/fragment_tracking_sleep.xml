<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_after_set_alarm"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="100dp"
    android:paddingRight="20dp"
    tools:context=".ui.alarm.TrackingSleepFragment">


    <ImageView
        android:id="@+id/imgAlarm"
        android:layout_width="95dp"
        android:layout_height="110dp"
        android:src="@drawable/baseline_alarm_24" />

    <TextView
        android:id="@+id/viewCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="0:00 AM"
        android:textColor="#D1CECE"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/viewAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="Alarm 9:00 AM - 9:30 AM"
        android:textColor="#D1CECE"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_stop_alarm"
        android:fontFamily="@font/quicksand_bold"
        android:text="Stop Alarm"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>
